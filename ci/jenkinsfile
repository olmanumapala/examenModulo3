pipeline {
   agent any
   stages {
      stage('Newman Tests') {
         steps {            
            sh '''            
            cd api/newman
            newman run examenPostman.postman_collection.json -e base_envi.postman_environment.json
            '''            
         }        
      }
   }
   stage('Jmeter Tests') {
            steps {
                sh '''
                cd load
                export PATH=/home/pjcalvov/jmeter/apache-jmeter-5.3/bin:$PATH
                jmeter -n -t examen_test_plan.jmx
                '''
            }
        }
}